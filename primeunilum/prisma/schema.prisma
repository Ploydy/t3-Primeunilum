// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Post {
    id        String   @id @default(uuid()) @map("_id")
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

model Customers {
    id        String     @id @default(uuid()) @map("_id")
    email     String     @unique
    name      String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    invoice   Invoices[]

    @@index([name, email])
}

model Products {
    id       String   @id @default(uuid()) @map("_id")
    name     String
    category Category
}

enum Category {
    Aluminum
    Glass
}

model Suppliers {
    id      String     @id @default(uuid()) @map("_id")
    name    String
    email   String
    contact Int
    status  Status
    invoice Invoices[]

    @@index([email, name])
}

enum Status {
    Paid
    Pending
}

model Invoices {
    id          String    @id @default(uuid()) @map("_id")
    amount      Int
    status      Status
    date        DateTime  @db.Date
    customer    Customers @relation(fields: [customer_id], references: [id])
    customer_id String
    supplier    Suppliers @relation(fields: [supplier_id], references: [id])
    supplier_id String
}
